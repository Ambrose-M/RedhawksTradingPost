@page
@model RedhawksTradingPost.Pages.UserPageModel
@{
    ViewData["Title"] = "UserPage";
}

<div class="container">
    <div class="row">
        <!--container for nav right: profile picture, user name, address, email etc-->
        <div class="col-3 font-fam">
            <img src="~/img/profilePicture.png" />

            <!--user icon and text-->
            <div class="row mt-2">
                <i class="material-icons md-36 mt-1">person</i>
                <h6 class="mt-3 ml-1">my name</h6>
            </div>

            <!--phone icon and text-->
            <div class="row mt-1">
                <i class="material-icons md-36">local_phone</i>
                <h6 class="mt-3 ml-1">xxx-xxx-xxxx</h6>
            </div>

            <!--home icon and text-->
            <div class="row mt-1">
                <i class="material-icons md-36 mt-1">home</i>
                <h6 class="mt-3 ml-1">address</h6>
            </div>

            <!--email icon and text-->
            <div class="row mt-1">
                <i class="material-icons md-36 mt-1">mail</i>
                <h6 class="mt-3 ml-1">email@seattleu.edu</h6>
            </div>
        </div>

        <!--container for product card-->
        <div class="col-9">
            <div class="card-deck">
                <div class="card-columns">
                    @foreach (var product in Model.Products)
                    {
                        <div class="card style">
                            <div class="card-img" style="background-image: url('@product.Image');"></div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Title</h5>
                            </div>
                            <div class="card-footer text-right">
                                <a href="/ItemPage" class="btn btn-primary mt-auto">View Details</a>
                                <button class="btn btn-danger mt-auto">Delete</button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- wishlist-->
            <div class="row">

                <!--Button collapse-->
                <button class="btn btn-primary btn-block" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Wishlist
                </button>

                <!--menu-->
                <div class="collapse " id="collapseExample">
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Appliances</label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Arts+Crafts</label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Books </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Electronics </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Furniture </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Office Supplies </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Tools </label>
                </div>
            </div>
        </div>
    </div>
</div>
