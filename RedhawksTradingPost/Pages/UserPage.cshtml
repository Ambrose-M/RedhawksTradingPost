@page
@model RedhawksTradingPost.Pages.UserPageModel
@{
    ViewData["Title"] = "UserPage";
}

<div class="container">
    <div class="row">
        <!--container for nav right: profile picture, user name, address, email etc-->
        <div class="col-3 font-fam">
            <img src="~/img/profilePicture.png" />

            <!--user icon and text-->
            <div class="row mt-2">
                <form class="form-inline">
                    <div class="form-group ">
                        <label for="user"><i class="material-icons md-36 mt-1">person</i></label>
                        <input type="text" id="user" class="form-control mx-sm-3 border-0" aria-describedby="passwordHelpInline" placeholder="Username">
                    </div>
                </form>
            </div>

            <!--phone icon and text-->
            <div class="row mt-1">
                <form class="form-inline">
                    <div class="form-group ">
                        <label for="phone"> <i class="material-icons md-36">local_phone</i></label>
                        <input type="tel" id="phone" class="form-control mx-sm-3 border-0" aria-describedby="passwordHelpInline" placeholder="xxx-xxx-xxxx">
                    </div>
                </form>
            </div>

            <!--home icon and text-->
            <div class="row mt-1">
                <form class="form-inline">
                    <div class="form-group ">
                        <label for="home"><i class="material-icons md-36 mt-1">home</i></label>
                        <input type="text" id="home" class="form-control mx-sm-3 border-0" aria-describedby="passwordHelpInline" placeholder="my address">
                    </div>
                </form>
            </div>

            <!--email icon and text-->
            <div class="row mt-1">
                
                <form class="form-inline">
                    <div class="form-group ">
                        <label for="email"><i class="material-icons md-36 mt-1">mail</i></label>
                        <input type="email" id="email" class="form-control mx-sm-3 border-0" aria-describedby="passwordHelpInline" placeholder="email@seattleu.edu">
                    </div>
                </form>
            </div>
        </div>

        <!--container for product card-->
        <div class="col-9">
            <div class="card-deck">
                <div class="card-columns">
                    @foreach (var product in Model.Products)
                    {
                        <div class="card style">
                            <div class="card-img" style="background-image: url('@product.Image');"></div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@product.Title</h5>
                            </div>
                            <div class="card-footer text-right">
                                <a href="/ItemPage" class="btn btn-primary mt-auto">View Details</a>

                                <!-- Button to Open the Modal -->
                                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#UserPageModal">
                                    Delete
                                </button>
                            </div>
                        </div>
                    }


                    <!-- The Modal -->
                    <div class="modal" id="UserPageModal">
                        <div class="modal-dialog">
                            <div class="modal-content">

                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">Delete Item</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>

                                <!-- Modal body -->
                                <div class="modal-body text-left">
                                    Click 'yes' to confirm deleting this item.
                                </div>

                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Yes</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- wishlist-->
            <div class="row">

                <!--Button collapse-->
                <button class="btn btn-primary btn-block custom-select text-left text-dark bg-white" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Wishlist
                </button>

                <!--menu-->
                <div class="collapse " id="collapseExample">
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Appliances</label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Arts+Crafts</label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Books </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Electronics </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Furniture </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Office Supplies </label>
                        <label class="checkbox-inline p-1 m-3"><input type="checkbox" class="m-1">Tools </label>
                </div>
            </div>
        </div>
    </div>
</div>
